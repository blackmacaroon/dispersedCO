<%- include("../partials/header")%>
<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Add a new campground</h1>
    </div>
    <div class="col-xs-12 col-md-5 col-lg-4">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="...">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" type="text" name="image" id="image" placeholder="...">
            </div>
            <div class="form-group">
                <label for="cost">Cost</label>
                <input class="form-control" type="number" name="cost" id="cost" placeholder="..." min="0.00" step="1.00">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="...">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" id="description" placeholder="...">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include("../partials/footer")%>
